<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.sisapsoo.controller.AdicionaFuncionarioController">
    <content>
        <VBox spacing="10" alignment="CENTER">
            <children>
                <Label text="Adicionar Novo Funcionário" style="-fx-font-size: 16px;"/>
                <HBox spacing="10">
                    <Label text="Nome:"/>
                    <TextField fx:id="campoNome" promptText="Nome"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="CPF:"/>
                    <TextField fx:id="campoCpf" promptText="CPF"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="Salário:"/>
                    <TextField fx:id="campoSalario" promptText="Salário"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="Telefone:"/>
                    <TextField fx:id="campoTelefone" promptText="Telefone"/>
                </HBox>
            </children>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType text="Cadastrar" buttonData="OK_DONE"/>
        <ButtonType text="Cancelar" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
