<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.sisapsoo.controller.AdicionaFuncionarioController">
    <content>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Adicionar Novo Funcionário" style="-fx-font-size: 16px;"/>
            <HBox spacing="10">
                <Label text="Nome:"/>
                <TextField fx:id="nomeField" promptText="Nome"/>
            </HBox>
            <HBox spacing="10">
                <Label text="CPF:"/>
                <TextField fx:id="cpfField" promptText="CPF"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Salário:"/>
                <Spinner fx:id="salarioSpinner" promptText="Salário"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Telefone:"/>
                <TextField fx:id="telefoneField" promptText="Telefone"/>
            </HBox>
        </VBox>
    </content>
</DialogPane>
