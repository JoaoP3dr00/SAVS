<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <!-- Unidade de persistência -->
    <persistence-unit name="sistemaApsoo">
        <!-- Implementação do JPA, neste caso Hibernate -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!-- Lista das entidades com o pacote correto -->
        <class>com.example.sisapsoo.model.Usuario</class>
        <class>com.example.sisapsoo.model.Funcionario</class>
        <class>com.example.sisapsoo.model.Cliente</class>
        <class>com.example.sisapsoo.model.Gerente</class>
        <class>com.example.sisapsoo.model.Pedido</class>
        <class>com.example.sisapsoo.model.Salgado</class>
        <class>com.example.sisapsoo.model.PedidoSalgado</class>
        <properties>
            <!-- Propriedades JDBC -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sistemaapsoo?useTimezone=true&amp;serverTimezone=UTC&amp;useSSL=false" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="apsoo_MVC1817" />
            <!-- Configurações específicas do Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" />
            <property name="hibernate.hbm2ddl.auto" value="create" /> <!-- Use "update" ou "validate" em produção -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>
